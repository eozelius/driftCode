<h4>Create a Post yayayayaay!!!</h4>

<% if @post.errors.any? %>
	<h5>Whoops
		<% @post.errors.full_messages.each do |msg| %>
		<ul>
			<%= content_tag :li, msg %>
		</ul>
	</h5>
	<% end %>


<% end %>


<%= form_for :post, url: posts_path do |f| %>
	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<%= f.label :body %><br>
	<%= f.text_area :body %>

	<%= f.submit %>
<% end %>