<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="mapping platform for backpackers and travelers">
    <meta name="keywords" content="mapping backpacking blog travel ">
    <meta name="author" content="Ethan Ozelius">

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag controller_name %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <% if flash.any? %>
      <% flash.each do |msgtype, msg| %>
        <div class="flash-messages flash-<%= msgtype %> col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <p class="flash"><%= msg %></p>
        </div>
      <% end %>
    <% end %>

    <script type="text/javascript">
      $(function(){
        setTimeout(function(){
          $('.flash-messages').remove();
        }, 5000);
      });
    </script>

    <nav id="driftmap-navbar" class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#driftmap-nav" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'driftmap', root_url, class: 'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse" id="driftmap-nav">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li>
                <%= link_to 'profile', user_path(current_user) %>
              </li>
            <% else %>
              <li>
                <%= link_to 'log in', login_path %>
              </li>
              <li>
                <%= link_to 'sign up', signup_path %>
              </li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="app-container">
      <%= yield %>
    </div>

    <% if false %>
      
    <!-- side Navigation -->
    <nav id="main">
      <ul>
        <li>
          <%= link_to root_url do %>
            <i class="fa fa-3x fa-globe"></i>
            <p class="nav-legend">home</p>
          <% end %>
        </li>
       
        <% if logged_in? %>
          <li style="height: 75px">
            <%= link_to user_path(current_user) do %>
              <i class="fa fa-3x fa-map-o"></i>
              <p class="nav-legend">drift map</p>
            <% end %>
          </li>
          <li style="margin-bottom:0; height:60px;">
            <%= link_to(logout_path, method: :delete) do %>
              <i class="fa fa-3x fa-sign-out"></i>
              <p class="nav-legend">logout</p>
            <% end %>
          </li>
        <% else %>
          <li style="margin-bottom:0; height:60px;">
            <%= link_to(login_path) do %>
              <i class="fa fa-3x fa-key fa-rotate-180"></i>
              <p class="nav-legend">login</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class="application-container">

      <div class="fake-header">
        <a href="/">
          <h2 class="page-title" style="border:none;">driftMap</h2>
        </a>
        <p class="tag-line">- journey of exploration</p>

        <% if !logged_in? && controller_name == 'welcome' %>
          <div class="login-btns-container">
            <%= link_to login_path do %>
              <button class="normal">Log in</button>
            <% end %>

            <%= link_to signup_path do %>
              <button class="normal" style="margin-right:13px;">Sign up</button>
            <% end %>
          </div>
        <% end %>

      </div>


      <div id="page-wrapper">
        <%= yield %>
      </div>  
    </div>

      <% end %>
  </body>
</html>

