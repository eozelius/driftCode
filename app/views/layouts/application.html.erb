<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag 'application', media: 'all',
                                         'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->

  </head>
  <body>
    <% if flash.any? %>
      <div class="flash-messages col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <% flash.each do |msgtype, msg| %>
          <p class="alert"><%= msg %></p>
        <% end %>
      </div>
    <% end %>
      
    <!-- side Navigation -->
    <nav id="main">
      <ul>
        <li>
          <a href="/">
            <i class="fa fa-3x fa-globe"></i>
            <p class="nav-legend">Home</p>
          </a>
        </li>
        <li>
          <a href="/posts">
            <i class="fa fa-3x fa-pencil"></i>
            <p class="nav-legend">Blog</p>
          </a>
        </li>
        <li>
          <a href="/photo">
            <i class="fa fa-3x fa-camera-retro"></i>
            <p class="nav-legend">Photos</p>
          </a>
        </li>
        <li>
          <a href="/code">
            <i class="fa fa-3x fa-code"></i>
            <p class="nav-legend">Code</p>
          </a>
        </li>

        <% if logged_in? %>
          <li>
            <%= link_to(logout_path, method: :delete) do %>
              <i class="fa fa-3x fa-sign-out"></i>
              <p class="nav-legend">Log out</p>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to(login_path) do %>
              <i class="fa fa-3x fa-key fa-rotate-180"></i>
              <p class="nav-legend">Log in</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class="application-container">
      <div id="page-wrapper">
        <%= yield %>
      </div>  
    </div>
  </body>
</html>
