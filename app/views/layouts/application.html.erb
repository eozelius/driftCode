<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="mapping platform for backpackers and travelers">
    <meta name="keywords" content="mapping backpacking blog travel ">
    <meta name="author" content="Ethan Ozelius">

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag controller_name %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>

    <!-- TimeLineJS -->
    <link title="timeline-styles" rel="stylesheet" href="https://cdn.knightlab.com/libs/timeline3/latest/css/timeline.css">
    <script src="https://cdn.knightlab.com/libs/timeline3/latest/js/timeline.js"></script>

    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->

  </head>
  <body>
    <% if flash.any? %>
      <% flash.each do |msgtype, msg| %>
        <div class="flash-messages flash-<%= msgtype %> col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <p class="flash"><%= msg %></p>
        </div>
      <% end %>
    <% end %>

    <script type="text/javascript">
      $(function(){
        setTimeout(function(){
          $('.flash-messages').remove();
        }, 5000);
      });
    </script>
      
    <!-- side Navigation -->
    <nav id="main">
      <ul>
        <li>
          <%= link_to root_url do %>
            <i class="fa fa-3x fa-globe"></i>
            <p class="nav-legend">home</p>
          <% end %>
        </li>
       
        <% if logged_in? %>
          <li style="height: 75px">
            <%= link_to user_path(current_user) do %>
              <i class="fa fa-3x fa-map-o"></i>
              <p class="nav-legend">drift map</p>
            <% end %>
          </li>
          <li style="margin-bottom:0; height:60px;">
            <%= link_to(logout_path, method: :delete) do %>
              <i class="fa fa-3x fa-sign-out"></i>
              <p class="nav-legend">logout</p>
            <% end %>
          </li>
        <% else %>
          <li style="margin-bottom:0; height:60px;">
            <%= link_to(login_path) do %>
              <i class="fa fa-3x fa-key fa-rotate-180"></i>
              <p class="nav-legend">login</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class="application-container">
      <button class="toggle-sidenav normal"><i class="fa fa-reorder"></i></button>

      <div class="fake-header">
        <a href="/">
          <h2 class="page-title" style="border:none;">driftMap</h2>
        </a>
        <p class="tag-line">- journey of exploration</p>

        <% if !logged_in? && controller_name == 'welcome' %>
          <div class="login-btns-container">
            <%= link_to login_path do %>
              <button class="normal">Log in</button>
            <% end %>

            <%= link_to signup_path do %>
              <button class="normal">Sign up</button>
            <% end %>
          </div>
        <% end %>
      </div>

      <div id="page-wrapper">
        <%= yield %>
      </div>  
    </div>
  </body>
</html>

<% if Rails.env.production? %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-83676035-1', 'auto');
    ga('send', 'pageview');

  </script>

<% end %>

<script type="text/javascript">
  $(function(){
    $('.toggle-sidenav').on('click', function(){
      var active = $('#main').hasClass('active');;
      $('#main').stop().animate({
        left: active ? '-65px' : '0px'
      });
      $('#main').toggleClass('active').css('display', 'block');
    });
  });
</script>