<% provide(:title, "log in") %>

<h3 class="page-title">long time no see.</h3>

<% if false %>
	<div class="errors">
		<p class="title">Whoops</p>
		<ul class="errors-list">
			<% @user.errors.full_messages.each do |msg| %>
				<li><p><%= msg %></p></li>
			<% end %>
		</ul>
	</div>	
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>	

	<p>
		<%= f.label :password %>
		<%= link_to " | forgot your password?", new_password_reset_path %>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.label :remember_me do %>
			<%= f.check_box :remember_me %>
			<span>remember me on this computer</span>
		<% end %>
	</p>	

	<p>
		<button class="normal" type="submit">log in</button>
	</p>
<% end %>

<div>
	<p class="title">First time here?</p>
		<a href="/signup">
			<p>
				<button class="normal" type="submit">sign me up</button>
			</p>
		</a>
	</p>
</div>	