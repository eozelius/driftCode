<% provide(:title, "log in") %>

<h3 class="page-title">long time no see.</h3>

<% if false %>
	<% if @user.errors.any? %>
		<div class="errors">
			<h4>Whoops</h4>
			<ul class="errors-list">
				<% @user.errors.full_messages.each do |msg| %>
					<li><p><%= msg %></p></li>
				<% end %>
			</ul>
		</div>	
	<% end %>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>	

	<p>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.label :remember_me do %>
			<%= f.check_box :remember_me %>
			<span>remember me on this computer</span>
		<% end %>
	</p>	

	<p>
		<button class="normal" type="submit">log in</button>
	</p>
<% end %>

<p>First time here?</p>
	<button class="normal" type="submit">
		<%= link_to "sign me up", signup_path %>
	</button>
</p>