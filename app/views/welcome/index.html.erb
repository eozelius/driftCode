<div class="container">
  <div class="readme-container">
    <h4>Welcome to driftMap</h4>
    <p>driftMap is a backpacking and travelling platform that allows you to share a map of your journeys, adventures and wild experiences. </p>
    
    <% unless logged_in? %>
      <%= link_to signup_path do %>
        <button class="normal">Sign up</button>
      <% end %>

      <%= link_to login_path do %>
        <button class="normal">Log in</button>
      <% end %>
    <% end %>
  </div>
</div>

<div id="home-page">
  <div class="master-container">
    <!-- Guide -->
    <div class="master-guide">
      <!-- LEGEND -->
      <div class="master-legend">
        <div class="legend-container">
          <div id="accordian-container">
            <div id="waypt-accord" class="panel-group " role="tablist" aria-multiselectable="true"></div>
          </div>
        </div>
      </div>

      <!-- CONTENT -->
      <div class="master-content">
        <div class="content-container">
          <h4 class="waypoint-title">Galleries</h4>
          <%# @journeys.each do |journey| %>
            <% journey = @journeys %>
            <% if journey.waypoints.any? %>
              <% journey.waypoints.each do |waypoint| %>
                <!-- GALLERIES -->
                <div class="master-content-container master-galleries" data-journey="<%= journey.id %>" data-waypoint="<%= waypoint.id %>">
                  <% if waypoint.galleries.any? %>
                    <% waypoint.galleries.each do |gallery| %>
                      <p><%= gallery.title %>!</p>
                    <% end %>
                  <% else %>
                    <p>no images.</p>
                  <% end %>
                </div>

                <!-- FRIENDS -->
                <div class="master-content-container master-friends hidden" data-journey="<%= journey.id %>" data-waypoint="<%= waypoint.id %>">
                  <% if waypoint.friends.any? %>
                    <% waypoint.friends.each do |friend| %>
                      <p><%= "#{friend.first_name} #{friend.last_name}" %></p>
                    <% end %>
                  <% else %>
                    <p>no friends</p>
                  <% end %>
                </div>

                <!-- Treks -->
                <div class="master-content-container master-treks hidden" data-journey="<%= journey.id %>" data-waypoint="<%= waypoint.id %>">
                  <% if waypoint.treks.any? %>
                    <% waypoint.treks.each do |trek| %>
                      <p><%= trek.title %></p>
                    <% end %>
                  <% else %>
                    <p>no treks</p>
                  <% end %>
                </div>

                <!-- Essays -->
                <div class="master-content-container master-essays hidden" data-journey="<%= journey.id %>" data-waypoint="<%= waypoint.id %>">
                  <% if waypoint.essays.any? %>
                    <% waypoint.essays.each do |essay| %>
                      <p><%= essay.title %></p>
                    <% end %>
                  <% else %>
                    <p>no essays</p>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <%# end %>
        </div>
      </div>
    </div>

    <!-- MAP -->
    <div class="master-leaflet">
      <div class="map-container">
        <div id='map'></div>
      </div>
    </div>
  </div>
</div>

<style type="text/css"> body #page-wrapper { margin-bottom: 0; } </style>