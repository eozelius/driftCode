<h2 class="page-title">driftCode</h2>

<div class="map-container">
	<div id='map'></div>
		<script type="text/javascript">
			var driftmap = {
				init_x: '<%= @post.init_x %>',
				init_y: '<%= @post.init_y %>',
				init_zoom: '<%= @post.init_zoom %>',
			}

			var blips = [];

			<% @post.blips.each do |b| %>
				blips.push({
					id: '<%= b.id %>',
					x: '<%= b.x %>',
					y: '<%= b.y %>',
					title: '<%= b.title %>',
					body: '<%= b.body %>'
				});
			<% end %>

			init_map('map', driftmap, blips);
		</script>
</div><!-- End Map -->
