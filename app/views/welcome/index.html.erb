<% if !logged_in? %>
  <div class="readme-container">
    <h4>Welcome to driftMap</h4>
    <p>driftMap is a platform that allows you to create, customize and share a map of where in the world you have been, and what was great about those places.</p>
    <%= link_to signup_path do %>
    	<button class="normal">Sign up</button>
    <% end %>

    <%= link_to login_path do %>
    	<button class="normal">Log in</button>
    <% end %>
  </div>
<% end %>

<div class="map-container">
    <%= render 'driftmap/view_driftmap_wizard' %>
    
	<div id='map'></div>
	
	<%= render 'driftmap/init_driftmap' %>
</div><!-- End Map -->
