<% provide(:title, "forgot password") %>

<h3 class="page-title">forgot password</h3>

<%= form_for( :password_resets, url: password_resets_path ) do |f| %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>	

	<p>
		<button class="normal" type="submit">submit</button>
	</p>
	
<% end %>
