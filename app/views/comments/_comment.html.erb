<div class="comment-container">
	<div class="comment_name">
		<%= comment.name %>
	</div>
	<div class="comment_body">
		<%= comment.body %><p> <%= time_ago_in_words(comment.created_at) %> ago.</p>
	</div>

	<p>
		<%= link_to 'delete', 
				[comment.post, comment], 
				method: :delete,
				class: 'button',
				data: { confirm: 'Are you sure?' } %>
	</p>
</div>