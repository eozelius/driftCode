	var currentPt = routePoints[routePoints.length - 1];

	$.ajax({
	  url: '/route_points',
	  type: 'POST',
	  dataType: 'JSON',
	  data: {
	    x: currentPt.lat,
	    y: currentPt.lng,
	    order: order,
	    id: route_id
	  },
	  complete: function(response){
	    var r = response.responseJSON

	    if(r.status == 200){
				if(order > 0){
					var toPoint 	= routePoints[routePoints.length - 1];
